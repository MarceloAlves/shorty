{
  "name": "nextjs-starter",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:staged": "yarn lint && yarn pretty:staged",
    "pretty:staged": "pretty-quick --staged",
    "pretty": "prettier --write './**/*.{js,mdx,tsx,ts,jsx}'",
    "test:watch": "jest --watch"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 120,
    "jsxSingleQuote": true
  },
  "dependencies": {
    "@chakra-ui/react": "^1.6.6",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.24.0",
    "framer-motion": "^4",
    "husky": "^7.0.1",
    "next": "11.1.0",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@testing-library/dom": "^8.1.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "@types/react": "17.0.17",
    "babel-jest": "^27.0.6",
    "eslint": "7.32.0",
    "eslint-config-next": "11.1.0",
    "jest": "^27.0.6",
    "typescript": "4.3.5"
  }
}
